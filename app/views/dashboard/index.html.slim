.row.mt-4
  .col-12
    .card
      .card-header
        h5.card-title.mb-0
          i.bi.bi-graph-up-arrow
          |  Quick Actions
      .card-body
        .row
          .col-md-3
            = link_to statistics_path, class: "btn btn-outline-primary w-100 mb-2" do
              i.bi.bi-bar-chart
              br
              | Statistics
          .col-md-3
            = link_to predictions_path, class: "btn btn-outline-success w-100 mb-2" do
              i.bi.bi-cpu
              br
              | AI Predictions
          .col-md-3
            = link_to api_v1_lottery_draws_path, class: "btn btn-outline-info w-100 mb-2" do
              i.bi.bi-code-slash
              br
              | API Data
          .col-md-3
            = link_to "/api-docs", class: "btn btn-outline-warning w-100 mb-2" do
              i.bi.bi-book
              br
              | API Docs
          .col-md-3
            = link_to sync_path, class: "btn btn-outline-secondary w-100 mb-2" do
              i.bi.bi-arrow-repeat
              br
              | Data Sync
