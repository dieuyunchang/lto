                  <th>Template</th>
                </tr>
              </thead>
              <tbody>
                <% @vietlot55_recent.each do |draw| %>
                  <tr>
                    <td><%= draw.formatted_date %></td>
                    <td>
                      <% draw.numbers_array.each do |number| %>
                        <span class="lottery-number" style="width: 25px; height: 25px; line-height: 25px; font-size: 0.8em;"><%= number %></span>
                      <% end %>
                    </td>
                    <td><span class="template-id" style="font-size: 0.7em;"><%= draw.template_id %></span></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <p class="text-muted">No recent draws available</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row mt-4">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">
          <i class="bi bi-graph-up-arrow"></i> Quick Actions
        </h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-3">
            <%= link_to dashboard_statistics_path, class: "btn btn-outline-primary w-100 mb-2" do %>
              <i class="bi bi-bar-chart"></i><br>Statistics
            <% end %>
          </div>
          <div class="col-md-3">
            <%= link_to dashboard_predictions_path, class: "btn btn-outline-success w-100 mb-2" do %>
              <i class="bi bi-cpu"></i><br>AI Predictions
            <% end %>
          </div>
          <div class="col-md-3">
            <%= link_to api_v1_lottery_draws_path, class: "btn btn-outline-info w-100 mb-2" do %>
              <i class="bi bi-code-slash"></i><br>API Data
            <% end %>
          </div>
          <div class="col-md-3">
            <%= link_to "/api-docs", class: "btn btn-outline-warning w-100 mb-2" do %>
              <i class="bi bi-book"></i><br>API Docs
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
